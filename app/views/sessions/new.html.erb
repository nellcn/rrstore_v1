<h1>Sign in</h1>

<div style="text-align:center;">
<%= error %>
</div>

<div style="text-align:center;">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %> <br>
      <%= f.text_field :email %><br>

      <%= f.label :password %><br>
      <%= f.password_field :password %><br>

      <%= f.submit "Sign in", class: "btn sg_btn" %>

    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>
