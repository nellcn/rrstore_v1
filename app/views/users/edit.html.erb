<h1>
  Hi, <%= @user.name %>, welcome to RR Stationery!
</h1>

<% if @user.errors.any? %>
<div style="text-align:center;color:red;">
  <% @user.errors.full_messages.each do |message| %>
    <%= message %><br>
  <% end %>
</div>
<br>
<% end %>

<div class="row">
  <div style="text-align:center;">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %> <br>
      <%= f.text_field :name %> <br>

      <%= f.label :email %> <br>
      <%= f.text_field :email %> <br>

      <%= f.label :password %> <br>
      <%= f.password_field :password %> <br>

      <%= f.label :password_confirmation, "Confirm Password" %> <br>
      <%= f.password_field :password_confirmation %> <br>

      <%= f.submit "Save changes", class: "btn sg_btn" %>
    <% end %>

  </div>

  <p style="text-align:center;"> <%= link_to "Go back to store!", root_path %> </p>

</div>

